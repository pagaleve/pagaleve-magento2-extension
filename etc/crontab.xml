<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="pagaleve_payment_process_payments" instance="Pagaleve\Payment\Cron\ProcessPayments" method="execute">
            <schedule>*/1 * * * *</schedule>
        </job>
        <job name="pagaleve_payment_create_order" instance="Pagaleve\Payment\Cron\CreateOrders" method="execute">
            <schedule>*/3 * * * *</schedule>
        </job>
    </group>
</config>
